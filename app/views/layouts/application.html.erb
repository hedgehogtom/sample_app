<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %> <!-- HTML5 shim for older IE -->
</head>
<body>
	<%= render 'layouts/header' %> <!-- Render from _header.html.erb -->
	<div class="container">
		<%= yield %>  <!-- Insert contents of each page into site layout -->
		<%= render 'layouts/footer' %> <!-- Render from _footer.html.erb -->
	</div>
</body>
</html>
